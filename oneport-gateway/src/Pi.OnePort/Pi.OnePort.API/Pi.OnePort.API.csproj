<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>Pi.OnePort.API</RootNamespace>
    <DockerComposeProjectPath>../docker-compose.dcproj</DockerComposeProjectPath>
    <UserSecretsId>d2a4af1f-494f-42f8-9665-a9312f80a492</UserSecretsId>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
    <NoWarn>1701;1702;1591</NoWarn>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <NoWarn>1701;1702;1591</NoWarn>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <WarningLevel>4</WarningLevel>
    <DocumentationFile>bin\Debug\net7.0\Pi.OnePort.API.xml</DocumentationFile>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <WarningLevel>4</WarningLevel>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <DocumentationFile>bin\Release\net7.0\Pi.OnePort.API.xml</DocumentationFile>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.HeaderPropagation" Version="7.0.2" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="7.2.0" />
    <PackageReference Include="MassTransit.AmazonSQS" Version="8.0.15" />
    <PackageReference Include="MassTransit.Analyzers" Version="8.0.15" />
    <PackageReference Include="MassTransit.EntityFrameworkCore" Version="8.0.15" />
    <PackageReference Include="MassTransit" Version="8.0.15" />
    <PackageReference Include="Amazon.Extensions.Configuration.SystemsManager" Version="4.0.0" />
    <PackageReference Include="Pi.Common" Version="1.0.73" />
    <PackageReference Include="Pi.Common.Serilog" Version="1.0.73" />
    <PackageReference Include="pi.common.startup" Version="1.0.73" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Startup\" />
    <None Remove="Serilog.AspNetCore" />
    <None Remove="MassTransit.AmazonSQS" />
    <None Remove="MassTransit.Analyzers" />
    <None Remove="MassTransit.EntityFrameworkCore" />
    <None Remove="MassTransit" />
    <None Remove="Amazon.Extensions.Configuration.SystemsManager" />
    <None Remove="Pi.Common" />
    <None Remove="Serilog.Sinks.Seq" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Startup\" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Pi.OnePort.Db2\Pi.OnePort.Db2.csproj" />
    <ProjectReference Include="..\Pi.OnePort.IntegrationEvents\Pi.OnePort.IntegrationEvents.csproj">
      <GlobalPropertiesToRemove></GlobalPropertiesToRemove>
    </ProjectReference>
  </ItemGroup>
</Project>
