<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <RootNamespace>Pi.WalletService.Application</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
    <NoWarn>1701;1702;1591</NoWarn>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <NoWarn>1701;1702;1591;CS0618;CS0612;IL2121;</NoWarn>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <DebugSymbols>true</DebugSymbols>
    <WarningLevel>4</WarningLevel>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="Services\" />
    <None Remove="Commands\" />
    <None Remove="Services\Models\" />
    <None Remove="Options\" />
    <None Remove="Services\SetTrade\" />
    <None Remove="StateMachines\CashWithdraw\" />
    <None Remove="Services\Freewill\" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="StateMachines\CashWithdraw\" />
    <Folder Include="Services\Freewill\" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Pi.WalletService.Domain\Pi.WalletService.Domain.csproj" />
    <ProjectReference Include="..\Pi.WalletService.IntegrationEvents\Pi.WalletService.IntegrationEvents.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="pi.client.paymentservice" Version="1.0.5" />
    <PackageReference Include="pi.client.onboardservice" Version="1.0.31" />
    <PackageReference Include="Pi.Financial.Client.Freewill" Version="1.0.67" />
    <PackageReference Include="Pi.BackofficeService.IntegrationEvents" Version="1.0.3" />
    <PackageReference Include="Pi.Client.OtpService" Version="1.0.5" />
    <PackageReference Include="Pi.Client.UserService" Version="1.0.36" />
    <PackageReference Include="pi.financial.client.settrade" Version="1.0.7" />
    <PackageReference Include="Pi.OtpService.IntegrationEvents" Version="1.0.3" />
  </ItemGroup>
</Project>
