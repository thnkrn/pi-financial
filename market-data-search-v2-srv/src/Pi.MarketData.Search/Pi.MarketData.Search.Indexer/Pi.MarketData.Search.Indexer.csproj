<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
      <Content Include="Pi.MarketData.Search.Indexer.csproj" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Pi.MarketData.Search.Domain\Pi.MarketData.Search.Domain.csproj">
            <GlobalPropertiesToRemove />
        </ProjectReference>
    </ItemGroup>

    <ItemGroup>
        <None Update="Data\searchIndex.json">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>

    <ItemGroup>
        <None Update="appsettings.json">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Update="appsettings.*.json">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>
    
    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Configuration" Version="9.0.0" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.0" />
        <PackageReference Include="Microsoft.Extensions.Hosting" Version="9.0.0" />
        <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
        <PackageReference Include="OpenSearch.Client" Version="1.8.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Pi.MarketData.Search.Application\Pi.MarketData.Search.Application.csproj" />
        <ProjectReference Include="..\Pi.MarketData.Search.Domain\Pi.MarketData.Search.Domain.csproj" />
        <ProjectReference Include="..\Pi.MarketData.Search.Infrastructure\Pi.MarketData.Search.Infrastructure.csproj" />
    </ItemGroup>

</Project>
