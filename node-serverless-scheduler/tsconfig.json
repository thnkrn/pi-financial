{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "outDir": "lib"
  },
  "include": [
    "db/**/models/*.ts",
    "src/**/*.ts",
    "serverless.ts",
    "src/models/index.js",
  ],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
