<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>Pi.BackofficeService.Application</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
    <NoWarn>1701;1702;1591</NoWarn>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <NoWarn>1701;1702;1591</NoWarn>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <DebugSymbols>true</DebugSymbols>
    <WarningLevel>4</WarningLevel>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="Commands\Onboard\OnboardConsumer.cs" />
    <Compile Remove="Queries\IUserQueries.cs" />
    <Compile Remove="Queries\UserQueries.cs" />
    <Compile Remove="Queries\IBlockTradeQueries.cs" />
    <Compile Remove="Queries\BlockTradeQueriesFake.cs" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="Services\" />
    <None Remove="Commands\" />
    <None Remove="Services\Models\" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Pi.BackofficeService.Domain\Pi.BackofficeService.Domain.csproj" />
    <ProjectReference Include="..\Pi.BackofficeService.IntegrationEvents\Pi.BackofficeService.IntegrationEvents.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http" Version="2.3.0" />
    <PackageReference Include="MimeTypes" Version="2.4.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Pi.ActivityService.IntegrationEvents" Version="1.0.4" />
    <PackageReference Include="Pi.Client.OnboardService" Version="1.0.49" />
    <PackageReference Include="Pi.Common" Version="1.0.48" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Commands\Onboard\" />
  </ItemGroup>
</Project>
